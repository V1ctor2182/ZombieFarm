# Zombie Farm Environment Variables
# Copy this file to .env for local development

# Development
VITE_DEBUG_MODE=false
VITE_ENABLE_LOGGING=true

# Game Configuration
VITE_GAME_VERSION=0.1.0
VITE_AUTO_SAVE_INTERVAL=300000
VITE_OFFLINE_PROGRESS_CAP_DAYS=7

# Feature Flags (for future use)
VITE_ENABLE_AUDIO=true
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_PHASER_DEBUG=false

# Performance
VITE_TARGET_FPS=60
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Local Storage Keys (prefix for save data)
VITE_STORAGE_PREFIX=zombiefarm_

# Future: External Services (placeholder)
# VITE_API_URL=
# VITE_ANALYTICS_ID=
